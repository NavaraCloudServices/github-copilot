{
    "name": "Java Springboot",
    "image": "mcr.microsoft.com/devcontainers/java",

    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}/exercisefiles/java/springboot/",
  
    "features": {
        "ghcr.io/devcontainers-extra/features/springboot-sdkman:2": {},
        "ghcr.io/devcontainers/features/java:1": {
            "version": "none",
            "installMaven": "true",
            "installGradle": "false"
        }
    },
  

	"forwardPorts": [3000],
    "customizations": {
		"vscode": {
			"openFiles": [
      			"README.md"
			],
			"extensions": [
				// GitHub
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"GitHub.vscode-github-actions",

				// Dev Containers
				"ms-vscode-remote.remote-containers",

				// Specific language support
                "vscjava.vscode-java-pack",
                
				// General language support
				"redhat.vscode-yaml",
				"zainchen.json",
				"streetsidesoftware.code-spell-checker",
                "mechatroner.rainbow-csv"
			]
		}
	}
  }